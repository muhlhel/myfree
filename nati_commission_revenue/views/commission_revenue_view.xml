<?xml version="1.0"?>
	<odoo>

		<record id="view_revenue_commission_config_form" model="ir.ui.view">
			<field name="name">revenue.commission.config.form</field>
			<field name="model">commission.revenue</field>
			<field name="arch" type="xml">
				<form >
					<sheet>
						<group>
							<field name="name"/>
						</group>
						<group string="Sales Rules">
							<field name= "commission_ids" nolabel="1" >
								<tree string="commission items" editable="bottom">
									<field name="start_qty"/>
									<field name="end_qty"/>
									<field name="ratio"/>
								</tree>
							</field>
						</group>
						
						<group string="Profit Rules">
							<field name= "profit_rules_ids" nolabel="1" >
								<tree string="profit rules items" editable="bottom">
									<field name="start_qty"/>
									<field name="end_qty"/>
									<field name="ratio"/>
								</tree>
							</field>
						</group>
						
					</sheet>
				</form>
			</field>
		</record>

		<record id="action_revenue_commission_config" model="ir.actions.act_window">
			<field name="name">Revenue Commission</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">commission.revenue</field>
			<field name="view_mode">form</field>
		</record>

		<menuitem id="menu_revenue_commission_config"
				  name="Revenue Commission"
				  parent="nati_commission_base.commission_menu_config"
				  action="action_revenue_commission_config"
				  sequence="2"/>
		

</odoo>
