<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>


         <report 
            string="Invoices modern"
            menu="False"
            id="custom_action_report_account_invoices"
            model="account.move"
            report_type="qweb-pdf"
            paperformat="nati_reports_base_style.paperformat_NatiA4"
            name="nati_reports_invoice_ksa.report_invoice"
            file="nati_reports_invoice_ksa.report_invoice"
            print_report_name="(object._get_report_base_filename())"/>

          <template id="report_invoice" inherit_id="account.report_invoice">          
                <xpath expr="//t[@t-call='account.report_invoice_document']" position="replace" >
                    <t t-call="web.html_container">
                        <t t-foreach="docs" t-as="o">
                            <t t-call="nati_reports_invoice_ksa.modern_report_invoice_document" t-lang="o.partner_id.lang"/>
                        </t>
                     </t>
                 </xpath>
          </template>
          

          
   
  </data>
</odoo>